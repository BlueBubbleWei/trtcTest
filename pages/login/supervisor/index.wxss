/* pages/login/interviewee/index.wxss */
.supervisor{
  width:  100vw;
  height: 100vh;
  padding: 30rpx;
  box-sizing: border-box;
  background: linear-gradient(to top,#f1eefc,#9dc6ff 70%,#a5bcff);
}
.list-area {
  padding: 10rpx 20rpx;
}
.list-area .order {
  padding: 0 4px;
  width: 10rpx;
  color: #666;
  display: inline-block;
  vertical-align: middle;
}
.list-area .name {
  padding: 0 4rpx 0 20rpx;
  display: inline-block;
  vertical-align: middle;
  width: 250rpx;
  text-align: center;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  color: #000;
}
.list-area .status {
  padding: 0 30rpx 0 15rpx;
    display: inline-block;
    vertical-align: middle;
    width: 157rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: #000;
}
.list-area .job {
  padding: 0 0 0 20rpx;
  width: 40rpx;
  vertical-align: middle;
}

.list-area .icon {
  display: inline-block;
  vertical-align: middle;
  padding: 0 20px;
  /* height: 25px; */
  width: 46rpx;
}

.list-tit{
  display: flex;
  flex-direction: row;
  padding: 0 24rpx;
  color: #5C3317;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 2vw;
}
.list-tit .name {
  display: inline-block;
  font-weight: bold;
  text-align: center;
  padding: 0 58rpx;
}

.noneArea{
  width: 100vw;
  height: 40vw;
  margin-top: 40vh;
}
.noneArea .tips {
  text-align: center;
  color: #999;
}
.noneArea .none-bg{
  height: 30vw;
  margin: 0 auto;
}
.none-bg  .bg{
  display: block;
  width: 30vw;
  margin: 0 auto;
}